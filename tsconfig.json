{
  "include": [ "src/" ],
  "exclude": [
    "public/",
    "node_modules/"
  ],
  "compilerOptions": {
    "outDir": "public/",
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/types",
      "src/types"
    ]
  }
}
